@import 'nib'

@keyframes logo1
  0%
    transform scale(0.3) rotate(0deg) translateX(0px) translateY(0px)
    opacity 0.2
  60% 
    transform scale(1.1) rotate(0deg) translateX(10px) translateY(0px)
    opacity 1
  85%
    transform scale(0.9) rotate(0deg) translateX(0px) translateY(0px)
    opacity 1
  100% 
    transform scale(1) rotate(0deg) translateX(0px) translateY(0)
    opacity 1


@keyframes logo2
  0%
    transform scale(0.3) rotate(0deg) translateX(0px) translateY(0px)
    opacity 0.2
  60%
    transform scale(1) rotate(0deg) translateX(0px) translateY(0)
    opacity 1
  85%
    transform scale(0.9) rotate(0deg) translateX(0px) translateY(0)
    opacity 1
  100%
    transform scale(1) rotate(0deg) translateX(0px) translateY(0)
    opacity 1

@keyframes logo3
  0%
    transform scale(0.3) rotate(0deg) translateX(0px) translateY(0px)
    opacity 0.2
  60%
    transform scale(1) rotate(0deg) translateX(-10px) translateY(10px)
    opacity 1
  85%
    transform scale(0.9) rotate(0deg) translateX(5px) translateY(-5px)
    opacity 1
  100%
    transform scale(1) rotate(0deg) translateX(0)
    opacity 1

@keyframes sub
  0%
    transform translateY(-160px)
  50%
    transform translateY(20px)
  75%
    transform translateY(-20px)
  100%
    transform translateY(0px)

@keyframes about
  0%
    transform translateY(100px)
  100%
    transform rotate(2deg) translateY(0px)
    opacity: 1

@keyframes spin
  0%
    transform rotate(0)
  100%
    transform rotate(360deg)

@keyframes building
  0%
    background-position 0 0
  100%
    background-position -1031px 0

@keyframes building2
  0%
    background-position 0 0
  100%
    background-position 1031px 0

@keyframes light 
  0%
    transform translateX(-267px) scale(1.08)
  25%
    transform translateX(0px) scale(1)
  50%
    transform translateX(267px) scale(1.08)
  75%
    transform translateX(0px) scale(1)
  100%
    transform translateX(-267px) scale(1.08)

@keyframes light-bottom 
  0%
    transform rotate(-15deg)
  50%
    transform rotate(15deg)
  100%
    transform rotate(-15deg)

@keyframes explode
  0%
    opacity 0
  60%
    opacity 1
  100%
    opacity 1

@keyframes explode2
  0%
    transform scale(0.3) rotate(0deg)
  60%
    transform scale(1.3) rotate(10deg)
  80%
    transform scale(0.8) rotate(0deg)
  100%
    transform scale(1) rotate(0deg)

@keyframes explode3
  0%
    transform scale(0.3) rotate(0deg)
  60%
    transform scale(1.5) rotate(-5deg)
  80%
    transform scale(0.8) rotate(0deg)
  100%
    transform scale(1) rotate(0deg)

@keyframes explode4
  0%
    transform scale(0.3) rotate(0deg)
  60%
    transform scale(1.9) rotate(-7deg)
  80%
    transform scale(0.8) rotate(0deg)
  100%
    transform scale(1) rotate(0deg)

@keyframes note
  0%
    transform translateX(-400px) rotate(-1deg)
    opacity 0
  70%
    transform translateX(40px) rotate(-1deg)
    opacity 1
  100%
    transform translateX(0px) rotate(-1deg)

@keyframes arrow
  0%, 5%, 13%, 20%, 25%
    transform translateY(0)
  10%
    transform translateY(-30px)
  15%
    transform: translateY(-15px)

@keyframes bounce
	0%
		opacity 0
		transform scale(.3)

	50%
		opacity 1
		transform scale(1.05) rotate(1deg)

	70%
		transform scale(.9) rotate(-1deg)

	100%
		opacity 1
		transform scale(1) rotate(-1deg)

