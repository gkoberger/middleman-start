@import 'nib'

source-sans = 'Source Sans Pro', sans-serif
noto = 'Noto Serif', serif

blue = #4384b5

mobile_break = "all and (max-width: 767px)"

body#hackfest
  background-color #fff
  p
    font-family noto
  .desc
    max-width: 800px;
    width: 90%;
    text-align: center;
    margin: 80px auto;
    font-size: 17px;
    line-height: 2.2em;
  h4
    font-family source-sans
    font-size: 47px;
    color: #333;
    margin: 0;
    text-align: center;

  #hackfest-main
    background-color #000
    .hackfest-header
      position relative
      background-image url(../img/hackfest/2014/bg-top.jpg)
      background-size: cover;
      background-position: 50% 0%;
      min-height 500px
      @media mobile_break
        height 300px
        min-height 0
        background-image: url(../img/hackfest/2014/bg-top-mobile.jpg);

      opacity 0
      transition opacity 0.3s ease-out

      &.on
        opacity 1
        h2, h3
          transform translateY(0)
          opacity 1

      h2, h3
        transform translateY(50px)
        transition 0.6s ease-out
        opacity 0
      h2
        margin 0
        font-family source-sans
        font-weight 900
        font-size 50px
      h3
        margin 0
        font-family source-sans
        font-weight 300
        font-size 23px
        color rgba(255,255,255,0.8)
        transition-delay 0.1s
        span
          padding 0 8px
        i
          padding-right 5px

      hgroup
        height: 120px;
        margin-top: -60px;
        top: 50%;
        position: absolute;
        width: 100%;

        text-align center
        color #fff
        @media mobile_break
          height 50px
          margin-top -25px
          h2
            font-size 30px
          h3
            font-size 14px

    .arrow
      width: 26px;
      height: 26px;
      display: block;
      position: absolute;
      bottom: 26px;
      left: 50%;
      margin-left: -13px;
      border-left: 1px solid #aaa;
      border-bottom: 1px solid #aaa;
      transform: rotate(-45deg);
      &:hover
        border-left 1px solid #fff
        border-bottom 1px solid #fff

  .desc, #judges, #sponsors, #prizes, #tips, #details, #sponsors, #lastyear
    margin-bottom 150px
    @media mobile_break
      margin-bottom 50px

  #judges
    .judge
      text-align center
      font-size 20px
      h5
        color #333
        margin 0
        font-family source-sans
      &:hover .judge-circle .img
        box-shadow 0 0 0 90px rgba(0,0,0,0.5) inset
        .icons a
          transform scale(1)
          opacity 1
          &:nth-child(1)
            transition-delay 0.15s
          &:nth-child(2)
            transition-delay 0.3s
          &:nth-child(3)
            transition-delay 0.45s
          &:nth-child(4)
            transition-delay 0.6s
          &:hover
            color #fff
        .icons .soon
          opacity 1
          transform scale(1)

      .judge-circle
        position relative
        width 80%
        border-radius 900px
        max-width 180px
        margin 40px auto 20px
        overflow hidden
        background-color #000
        background-size cover
        box-shadow 0 0 0 10px rgba(255,255,255,0.3) inset
        .img
          width 100%
          height 100%
          transition 0.3s ease-out
          position absolute
          top 0
          border-radius 900px
          .icons
            position: absolute;
            top: 50%;
            margin-top: -18px;
            text-align: center;
            width: 100%;
            font-size: 30px;
            .soon
              opacity 0
              transform scale(0.3)
              font-size: 14px;
              padding-top: 10px;
              transition 0.3s ease-out
              color: #fff;
              font-size: 70px;
              top: -13px;
              position: relative;
            a
              color: #ddd;
              opacity 0
              transform scale(0.3)
              transition opacity 0.3s ease-out, transform 0.3s ease-out
              
        &:before, .img:before
          content ""
          display block
          padding-top 100% 	/* initial ratio of 1:1*/
        &.gerald
          background-image url(../img/hackfest/2014/gerald.png);
        &.david
          background-image url(../img/hackfest/2014/david.jpg);
        &.pooja
          background-image url(../img/hackfest/2014/pooja.jpg);
        &.soon1
          background-image url(../img/hackfest/2014/soon1.jpg);
        &.soon2
          background-image url(../img/hackfest/2014/soon2.jpg);

      .judge-byline
        font-size 14px
        color #777
        font-family source-sans
        font-weight 300

  #prizes
    background-color #444
    padding 100px 20px
    background-image url(../img/hackfest/2014/bg-prizes.jpg)
    @media mobile_break
      background-image url(../img/hackfest/2014/bg-prizes-mobile.jpg)
      background-attachment initial
    background-size cover
    background-position center center
    background-attachment fixed
    text-align center
    h4
      color #fff
      margin 0
    .icon-trophy
      display block
      text-align center
      color #fff
      font-size 70px
      margin 25px 0
    h5
      font-size 18px
      background-color rgba(0,0,0,0.9)
      margin-bottom 5px
      color #fff
      text-align center
      padding 6px
      sup
        font-size 13px
    ul
      margin 0
      padding 0
      list-style none
      &.lite
        li
          color rgba(0,0,0,0.8)
          background-color rgba(255,255,255,0.6)
      li
        margin 0 0 5px
        font-size 13px
        padding 0
        list-style none
        background-color rgba(255,255,255,0.9)
        padding 10px 8px
        text-align center
    // New stuff
    .icon-trophy
      margin-top 0
    .bignumber
      color #fff
      text-align center
      font-weight bold
      font-size 70px
    .grandprize
      text-align center
      color rgba(255,255,255,0.5)
      font-size 30px
      margin-top 10px
    .otherprize
      color #fff
      text-align center
      margin-top 30px
      padding-top 30px
      display inline-block
    .prize-box
      max-width 900px
      margin auto
      margin-top 25px
      img 
        max-width 100%
    .prizes-info
      text-align left
      h2
        color #fff
        margin-bottom 5px
      p
        color rgba(#fff, 0.8)

  #tips
    p
      margin-bottom 8px
      margin-top 2em
      text-align center
      padding 0 10px
    a
      font-size 11px
      text-decoration none
      color #888
      text-transform uppercase
      text-align center
      display block
      &:hover
        color blue

  #lastyear
    background-color #444
    padding 100px 20px
    background-image url(../img/hackfest/2014/bg-lastyear.jpg)
    @media mobile_break
      background-image url(../img/hackfest/2014/bg-prizes-mobile.jpg)
      background-attachment initial
    background-size cover
    background-position center center
    background-attachment fixed
    color #fff
    h4
      color #fff
    h5
      font-size 30px
      text-align center
      margin 10px 0
    .halo
      width 75px
      height 75px
      padding 5px
      border 1px solid #bbb
      margin 20px auto
      border-radius 100px
    .image
      width 75px
      height 75px
      border-radius 100px
      margin auto
      &.team2012
        background-image url(../img/hackfest/2014/team-2012.jpg)
      &.team2013
        background-image url(../img/hackfest/2014/team-2013.jpg)
      &.team2014
        background-image url(../img/hackfest/2014/team-2014.jpg)
    p
      text-align: center;
      font-size: 12px;
      line-height: 1.6em;
      padding: 0 10px;
      margin: 0 0 10px 0;
    .team
      font-family noto
      list-style none
      padding 0
      margin 0
      text-align: center;
      font-size: 12px;
      opacity: 0.5;
      line-height: 1.7em;
    .apply-link-parent
      text-align center
      .apply-link
        display inline-block
        background-color rgba(255,255,255,0.5)
        border-radius 5px
        padding 10px 30px
        font-weight bold
        text-decoration none
        color #000
        margin-top 10px
        &:hover
          background-color rgba(255,255,255,0.9)
    .hosted
      text-align center
      color rgba(255,255,255,0.5)
      span
        display inline-block
        height 25px
        background-size contain
        text-indent -9999px
        opacity 0.7
        vertical-align middle
      &.host2012 span
        background-image url(../img/hackfest/2014/host-2012.png)
        width 90px
      &.host2013 span
        background-image url(../img/hackfest/2014/host-2013.png)
        width 55px
      &.host2014 span
        background-image url(../img/hackfest/2014/host-2014.png)
        width 25px

  #details
    h4
      margin-bottom 20px
    h5
      color #999
      font-weight 300
      margin 0
      text-align left
      font-size 16px
      margin-top 34px
      text-transform uppercase
    ul
      font-family nato
      list-style none
      padding 0
      font-size 16px
      margin-bottom 20px
      li
        margin-bottom 6px
    .applyonce
      font-family nato
      color #999
      margin-top 20px
      padding-top 20px
      border-top 1px solid #ddd
    label
      color #555
      font-size 12px
      padding 0 10px 3px
      display block
      margin-top 20px
      &.error
        margin-top 5px
        color rgb(197, 136, 136)
    input, textarea
      border 0 none
      border-bottom 1px solid #ccc
      border-top 1px solid #eee
      border-radius 0 0
      background-color #f9f9f9
      box-shadow 0 0
      &.error
        border-bottom-color rgb(197, 136, 136)
        color rgb(197, 136, 136)
    .apply-done
      display none
      &.on
        display block
      &.saved
        text-align center
        color rgb(117, 182, 117)
        h4
          color rgb(117, 182, 117)
        .icon-check-sign
          font-size 50px
    .apply-individual, .apply-team
      width 50%
      display inline-block
      border 1px solid #ccc
      padding 10px 20px
      text-align center
      border-radius 15px 0 0 15px
      float left
      box-sizing border-box
      margin-top 20px
      text-decoration none
      cursor pointer
    #teammates
      .first
        input
          margin-top 0

      input
        margin-top 20px

    .apply-team
      border-radius 0 15px 15px 0
      border-left 0 none
    .dropbox-chooser
      margin-left 10px
      margin-top 5px
    .type-picker
      display none
      &:checked + label
        color #333
        background-color #eee
        font-weight bold
        font-size 12px

    .action
      margin-top 20px
      text-align right
      button
        border 1px solid #ccc
        background linear-gradient(#fff, #eee)
        box-shadow 0 0
        text-shadow 0 0
        color #555 !important
        padding 12px 44px
        &:hover, &:focus
          border 1px solid blue
          outline 0 none
          color blue !important
        &:active
          background linear-gradient(#eee, #fff)
          outline 0 none

  #footer
    background-color #333
    text-align left
    color #fff

    background-image url(../img/hackfest/2014/bg-bottom.jpg)
    background-position center -130px
    padding 60px 40px 60px
    background-size 2600px auto
    background-attachment fixed
    background-position bottom center
    .grid-container
      max-width 740px

    h4
      color #fff
      text-align left
      font-size 24px
    p
      font-family source-sans
      font-weight 300
    a
      color rgba(255, 255, 255, 0.5)
      text-decoration none
      padding-bottom 2px
      &:hover
        color #fff

.sponsors-container
  text-align center
  @media mobile_break
    display none
  #sponsors-other
    margin-top 15px
  .grid-container
    max-width 958px
  .logo
    &.medium
      width 128px
      height 128px
      margin 0 0 40px
      background-image url(../img/hackfest/2014/logos/medium.png)
      display block

      top: 12px;
      position: relative;
      left: 20px;

      &:hover
        background-position 0 -128px
    &.facebook
      width 282px
      height 56px
      background-image url(../img/hackfest/2014/logos/facebook.png)
      display block
      &:hover
        background-position 0 -56px
    vertical-align middle !important
    display inline-block !important
    margin 20px
