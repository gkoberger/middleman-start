@import 'nib'

source-sans = 'Source Sans Pro', sans-serif
noto = 'Noto Serif', serif

blue = #4384b5

mobile_break = "all and (max-width: 767px)"

body#hackfest
  background-color #fff
  p
    font-family noto
  .desc
    max-width: 800px;
    width: 90%;
    text-align: center;
    margin: 80px auto;
    font-size: 17px;
    line-height: 2.2em;
  h4
    font-family source-sans
    font-size: 47px;
    color: #333;
    margin: 0;
    text-align: center;

  #hackfest-main
    background-color #000
    .hackfest-header
      position relative
      background-image: url(../img/hackfest/2014/bg-top.jpg);
      background-size: cover;
      background-position: center center;
      min-height 500px
      @media mobile_break
        height 300px
        min-height 0
        background-image: url(../img/hackfest/2014/bg-top-mobile.jpg);

      opacity 0
      transition 0.3s ease-out

      &.on
        opacity 1
        h2, h3
          transform translateY(0)
          opacity 1

      h2, h3
        transform translateY(50px)
        transition 0.6s ease-out
        opacity 0
      h2
        margin 0
        font-family source-sans
        font-weight 900
        font-size 50px
      h3
        margin 0
        font-family source-sans
        font-weight 300
        font-size 23px
        color rgba(255,255,255,0.8)
        transition-delay 0.1s
        span
          padding 0 8px
        i
          padding-right 5px

      hgroup
        height: 120px;
        margin-top: -60px;
        top: 50%;
        position: absolute;
        width: 100%;

        text-align center
        color #fff
        @media mobile_break
          height 50px
          margin-top -25px
          h2
            font-size 30px
          h3
            font-size 14px

    .arrow
      width: 26px;
      height: 26px;
      display: block;
      position: absolute;
      bottom: 26px;
      left: 50%;
      margin-left: -13px;
      border-left: 1px solid #aaa;
      border-bottom: 1px solid #aaa;
      transform: rotate(-45deg);
      &:hover
        border-left 1px solid #fff
        border-bottom 1px solid #fff

  .desc, #judges, #sponsors, #prizes, #tips, #details
    margin-bottom 150px
    @media mobile_break
      margin-bottom 50px

  #judges
    .judge
      text-align center
      font-size 20px
      h5
        color #333
        margin 0
        font-family source-sans
      &:hover .judge-circle .img
        box-shadow 0 0 0 90px rgba(0,0,0,0.5) inset
        .icons a
          transform scale(1)
          opacity 1
          &:nth-child(1)
            transition-delay 0.15s
          &:nth-child(2)
            transition-delay 0.3s
          &:nth-child(3)
            transition-delay 0.45s
          &:nth-child(4)
            transition-delay 0.6s
          &:hover
            color #fff
        .icons .soon
          opacity 1
          transform scale(1)

      .judge-circle
        position relative
        width 80%
        border-radius 900px
        max-width 180px
        margin 40px auto 20px
        overflow hidden
        background-color #000
        background-size cover
        box-shadow 0 0 0 10px rgba(255,255,255,0.3) inset
        .img
          width 100%
          height 100%
          transition 0.3s ease-out
          position absolute
          top 0
          border-radius 900px
          .icons
            position: absolute;
            top: 50%;
            margin-top: -18px;
            text-align: center;
            width: 100%;
            font-size: 30px;
            .soon
              opacity 0
              transform scale(0.3)
              font-size: 14px;
              padding-top: 10px;
              transition 0.3s ease-out
              color: #fff;
              font-size: 70px;
              top: -13px;
              position: relative;
            a
              color: #ddd;
              opacity 0
              transform scale(0.3)
              transition opacity 0.3s ease-out, transform 0.3s ease-out
              
        &:before, .img:before
          content ""
          display block
          padding-top 100% 	/* initial ratio of 1:1*/
        &.gerald
          background-image url(../img/hackfest/2014/gerald.png);
        &.david
          background-image url(../img/hackfest/2014/david.jpg);
        &.pooja
          background-image url(../img/hackfest/2014/pooja.jpg);
        &.soon1
          background-image url(../img/hackfest/2014/soon1.jpg);
        &.soon2
          background-image url(../img/hackfest/2014/soon2.jpg);

      .judge-byline
        font-size 14px
        color #777
        font-family source-sans
        font-weight 300

  #prizes
    background-color #444
    padding 100px 20px
    background-image url(../img/hackfest/2014/bg-prizes.jpg)
    @media mobile_break
      background-image url(../img/hackfest/2014/bg-prizes-mobile.jpg)
      background-attachment initial
    background-size cover
    background-position center center
    background-attachment fixed
    h4
      color #fff
      margin 0
    .icon-trophy
      display block
      text-align center
      color #fff
      font-size 70px
      margin 25px 0
    h5
      font-size 18px
      background-color rgba(0,0,0,0.9)
      margin-bottom 5px
      color #fff
      text-align center
      padding 6px
      sup
        font-size 13px
    ul
      margin 0
      padding 0
      list-style none
      &.lite
        li
          color rgba(0,0,0,0.8)
      li
        margin 0 0 5px
        font-size 13px
        background-color rgba(255,255,255,0.6)
        padding 0
        list-style none
        padding 10px 8px
        text-align center

  #tips
    p
      margin-bottom 8px
      margin-top 2em
      text-align center
      padding 0 10px
    a
      font-size 11px
      text-decoration none
      color #888
      text-transform uppercase
      text-align center
      display block
      &:hover
        color blue

  #details
    h5
      text-align center
      color #999
      font-weight 300
      font-size 20px
    ul
      font-family nato
      li
        margin-bottom 6px

  #footer
    background-color blue
    text-align left
    color #fff

    background-image url(http://cl.ly/image/3B0t071l2w1c/content)
    background-position center -130px
    padding 160px 40px 70px
    background-size 2600px auto
    background-attachment fixed
    background-position bottom center
    .grid-container
      max-width 740px

    h4
      color #fff
      text-align left
      font-size 30px
    p
      font-family source-sans
      font-weight 300
    a
      color rgba(255, 255, 255, 0.5)
      text-decoration none
      padding-bottom 2px
      &:hover
        color #fff

