.apply_form
  display none
  position absolute
  box-sizing border-box
  z-index 100
  border-radius 4px
  overflow hidden
  input.error
    border 1px solid lighten(red, 20%) !important
  label.error
    color lighten(red, 20%) !important
    margin-top 5px
  &.on
    transition 0.5s ease-out
  &.rotate
    .topbar
      border-radius 4px 6px 0 0
      .close span
        transform rotate(315deg)
        border-radius 0 4px 0 0

  .topbar
    width 100%
    box-sizing border-box
    padding 16px 66px 16px 20px
    text-decoration none
    display block
    text-align center
    border-radius 4px
    margin-right 20px
    transition border-radius 0.5s ease-out
    a.close
      text-decoration none
      padding 16px 20px
      display block
      position absolute
      right 0
      top 0
      box-sizing border-box
      border-radius 0 4px 4px 0
      background-repeat no-repeat
      background-position center center
      transition border-radius 0.5s ease-out
      span
        width 13px
        height 13px
        display block
        position absolute
        background-image url('/img/techfair/plus.png')
        absolute 50% 50%
        left 50%
        margin-left -6px
        top 50%
        margin-top -6px
        transition all 0.5s ease-out
