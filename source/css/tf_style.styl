        border-radius 0 5px 5px 0
        background-color darken(#e43d39, 10%)
        background-image url('/img/techfair/arrow.png?')
        background-repeat no-repeat
        background-position center center
      &:hover
        background-color darken(#e43d39, 10%)
      &:disabled
        background-color #ccc
        &:after
